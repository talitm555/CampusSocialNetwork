@{
    ViewBag.Title = "Add Class";
}




<form id="AddClass" name="AddClass" method="post" action="">
    <div class="form_description">
        <p>Fill up below form to add a new Class.</p>
    </div>
    <fieldset>

        <label>Class Name:</label>
        <input type="text" name="ClassName" value="" placeholder="Enter Name of the Class..."><br>
        <label>Capacity:</label>
        <input type="text" name="ClassCapacity" value="" placeholder="Enter Capacity of the Class..."><br>

    </fieldset>
    <br>
    <input type="submit" class="btn btn-default" value="Add Class">
</form>


