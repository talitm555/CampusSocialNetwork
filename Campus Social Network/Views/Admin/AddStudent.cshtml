@{
    ViewBag.Title = "Add Student";
}




<form id="AddStudent" name="AddStudent" method="post" action="">
    <div class="form_description">
        <p>Fill up below form to add a new student.</p>
    </div>
    <fieldset>

        <label>First Name:</label>
        <input type="text" name="FirstName" value="" placeholder="Enter First Name..."><br>
        <label>Last Name:</label>
        <input type="text" name="LastName" value="" placeholder="Enter Last Name..."><br>
        <label>Date of Birth:</label>
        <input type="date" name="DateOfBirth" value=""><br>
        <label>Gender:</label>
        <input type="radio" name="Gender" value="Male"> Male
        <input type="radio" name="Gender" value="Female"> Female
        <input type="radio" name="Gender" value="Other"> Other <br />
        <label>Profile Picture:</label>
        <input type="file" name="ProfilePic"> <br>
    </fieldset>
    <fieldset>

        <label>Registration Number:</label>
        <input type="text" name="RegNo" value="" placeholder="YYYY-XX-999"><br>
        <label>Class:</label>
        <select name="Class">
            <option value="2016-CSE-A">2016-CSE-A</option>
            <option value="2016-CSE-B">2016-CSE-B</option>
            <option value="2016-CSE-C">2016-CSE-C</option>
            <option value="2016-CSE-D">2016-CSE-D</option>
        </select><br />
    </fieldset>
    <fieldset>

        <label>Email:</label>
        <input type="text" name="Email" value="" placeholder="abc@domain.com"><br>
        <label>Password:</label>
        <input type="password" name="Password" value="123456"><br>
    </fieldset>
    <br>
    <input type="submit" class="btn btn-default" value="Add Student">
</form>


